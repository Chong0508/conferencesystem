pipeline {
    agent any

    tools {
        nodejs "node-18"
    }

    environment {
        BACKEND_DIR = "backend"
        FRONTEND_DIR = "frontend"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                echo "Source code checked out successfully from GitHub."
            }
        }

        stage('Backend: Unit Tests') {
            steps {
                echo "Running Spring Boot Unit Tests..."
                dir("${BACKEND_DIR}") {
                    sh """
                        chmod +x mvnw
                        ./mvnw clean test -B
                    """
                }
            }
            post {
                always {
                    junit "${BACKEND_DIR}/target/surefire-reports/*.xml"
                }
            }
        }

        stage('Frontend: Unit Tests') {
            steps {
                echo "Running Angular Unit Tests..."
                dir("${FRONTEND_DIR}") {
                    sh """
                        mkdir -p allure-results
                        npm install
                        npx ng test --watch=false --browsers=ChromeHeadlessNoSandbox
                    """
                }
            }
        }

        stage('Frontend: Build Check') {
            steps {
                echo "Verifying Angular Production Build..."
                dir("${FRONTEND_DIR}") {
                    sh "npm run build -- --configuration=production"
                }
            }
        }

        stage('Reports: Allure') {
            steps {
                echo "Generating Combined Allure Report..."
                allure includeProperties: false,
                       jdk: '',
                       results: [
                           [path: "${BACKEND_DIR}/target/allure-results"],
                           [path: "${FRONTEND_DIR}/allure-results"]
                       ]
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "Build Success! Backend & Frontend verified."
        }
        failure {
            echo "Build Failed. Check unit tests and Allure reports."
        }
    }
}
