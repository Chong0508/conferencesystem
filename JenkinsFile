pipeline {
    agent any

    environment {
        BACKEND_DIR = "backend"
        FRONTEND_DIR = "frontend"
        E2E_DIR = "e2e"
        // Stores browsers in the workspace to avoid permission issues in different environments
        PLAYWRIGHT_BROWSERS_PATH = "${WORKSPACE}/pw-browsers"
        // Points to the Chromium binary installed in your custom Docker container
        CHROME_BIN = "/usr/bin/chromium"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "Source code checked out successfully from GitHub."
            }
        }

        stage('Backend: Unit Tests') {
            steps {
                echo "Running Spring Boot Unit Tests..."
                dir("${BACKEND_DIR}") {
                    sh """
                        chmod +x mvnw
                        ./mvnw clean test -B 
                    """
                }
            }
            post {
                always {
                    // Collects JUnit results for the Jenkins dashboard
                    junit "${BACKEND_DIR}/target/surefire-reports/*.xml"
                }
            }
        }

        stage('Frontend: Unit Tests') {
            tools { nodejs "node-v22" }
            steps {
                echo "Running Angular Unit Tests (Karma/Jasmine)..."
                dir("${FRONTEND_DIR}") {
                    sh """
                        npm install
                        # Uses the custom launcher defined in karma.conf.js
                        npx ng test --watch=false --browsers=ChromeHeadlessNoSandbox
                    """
                }
            }
        }

        stage('Frontend: Build Check') {
            tools { nodejs "node-v22" }
            steps {
                echo "Verifying Angular Production Build..."
                dir("${FRONTEND_DIR}") {
                    sh "npm run build -- --configuration=production"
                }
            }
        }

        stage('E2E: Playwright Tests') {
            tools { nodejs "node-v22" }
            steps {
                echo "Running Playwright End-to-End Tests..."
                dir("${E2E_DIR}") {
                    sh """
                        npm install
                        
                        # FIX: Grant execution permissions to resolve 'Permission Denied' errors
                        chmod -R +x node_modules/.bin
                        
                        # Install Playwright browsers
                        npx playwright install --with-deps chromium
                        
                        # Execute the full-stack flow test
                        npx playwright test full-stack-flow.spec.ts
                    """
                }
            }
            post {
                always {
                    // Publishes the HTML report to the Jenkins sidebar
                    publishHTML([allowMissing: false, 
                                  alwaysLinkToLastBuild: true, 
                                  keepAll: true, 
                                  reportDir: "${E2E_DIR}/playwright-report", 
                                  reportFiles: 'index.html', 
                                  reportName: 'Playwright E2E Report'])
                }
            }
        }

        stage('Reports: Allure') {
            steps {
                echo "Generating Allure Report..."
                allure includeProperties: false,
                       jdk: '',
                       results: [[path: "${BACKEND_DIR}/target/allure-results"]]
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "Build Success! Your Conference Management System is verified."
        }
        failure {
            echo "Build Failed. Please check the sidebar reports for logs and screenshots."
        }
    }
}